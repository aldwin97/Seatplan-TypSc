<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        <mapper namespace="com.seatPlan.project.dao.MachineDao">

            <insert id="insertMachine"  parameterType="com.seatPlan.project.model.MachineInputModel">
                INSERT INTO table_machine (
                    machine_name, 
                    project_id,  
                    created_by)
                VALUES (
                    #{machine_name}, 
                    #{project_id},
                    #{created_by})
            </insert>

            <select id="getAllMachine" resultType="com.seatPlan.project.model.MachineModel">
                SELECT * FROM table_machine WHERE is_deleted = 0
            </select>

            <update id="deleteMachineById">
                UPDATE table_machine SET is_deleted = 1 WHERE machine_id = #{machine_id}
            </update>

        </mapper>